.look_wrap
  position relative
  margin-top 0
  width 100%
  background-color #ffffff
  .title
    height 60px
    width 100%
    text-align center
    line-height 60px
    font-size 16px;
    font-family: "PingFang SC", "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
  .img
    img
      width 375px
      height 500px
  .comment
    height 110px
    width 100%
    padding 12px 15px 23px
    box-sizing border-box
    .comment_top
      margin-bottom  10px
      img
        width 24px
        height 24px
        border-radius 50%
        margin-right 5px
        vertical-align middle
      span
        font-size 12px
        color black
        line-height 24px
        display inline-block
    .comment_bottom
      width 100%
      p
        font-size 14px
        line-height 20px
        padding 0 5px
        display inline-block
        width 340px