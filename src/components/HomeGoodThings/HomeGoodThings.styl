@import "../../assets/css/mixins.styl"
.home-goodThingsCategory1
  margin-bottom: 10px
  background-color: #fff
  .home-goodThingsTitle
    background-color: #ffffff
    .title
      line-height: 60px
      text-align: center
      font-size: 18px
      font-family: "PingFang SC", "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
      color: #b4282d
      background-color: #fff
    .home-goodThings
      width: 100%
      display: flex
      justify-content: space-between
      align-items: center
      flex-wrap: wrap
      .goodThingsWrap
        background: #ff
        width: 46%
        margin-bottom: 8px
        padding-bottom: 8px
        position relative
        &:nth-of-type(odd)
          margin-right: 12px
          margin-left: 8px
        &:nth-of-type(even)
          margin-right: 8px
        img
          display: block
          width: 100%
          height: 172px
          border-radius: 2px 2px 0 0
          background-color: #f4f4f4
        .promTag
          display inline-block
          background-color #f48f18
          color #ffffff
          font-size 12px
          padding 3px
          text-align right
          vertical-align middle
          position absolute
          right 4px

        .desc
          bottom: 0
          width: 95%
          background: #F1ECE2
          border-radius: 0 0 2px 2px
          font-size: 12px
          color: #9F8A60
          letter-spacing: 0
          line-height: 14px
          padding: 10px 5px
          white-space: nowrap
          text-overflow: ellipsis
          overflow: hidden
        .name
          margin-top: 5px
          padding: 0 5px
          line-height: 24px
          text-align: left
          font-size: 14px
          text-overflow: ellipsis
          overflow: hidden
          white-space: nowrap
          color: #333
        .price
          line-height: 1
          font-size: 16px
          text-align: left
          color: #b4282d
          padding: 5px
