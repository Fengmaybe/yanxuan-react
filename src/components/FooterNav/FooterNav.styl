
.FooterContainer
  border-top: 1px solid #999;
  border-bottom: 1px solid #999;
  position: fixed;
  bottom: 0;
  z-index: 20;
  background-color: #f5f5f5;
  height: 49px;
  width: 100%;
  .Footer
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    .FooterItem
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-around;
      &.active
        color: #b4282d;
      .title
        font-size: 14px;
        margin-top: 4px;
      .iconfont
        font-size: 22px;