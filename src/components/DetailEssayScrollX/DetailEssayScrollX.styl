.detail_essay_scrollX_wrap{
  border-top 1px solid #eee
  overflow: hidden;
  padding: 14px 15px;
  height: 113px;
  background-color: #fff;
  margin-bottom: 10px;
  display: flex;
  .scroll-wrap{
    margin-left: auto;
    margin-right: auto;
    position: relative;
    transform: translate3d(0px, 0px, 0px);
    display: flex;
    flex-wrap: nowrap;
    .scroll-item{
      position: relative;
      width: 82px;
      height: 105px;
      margin-right: 15px;
      .imgContainer{
        img{
          background-size: cover;
          background-position: center;
          background-repeat: no-repeat;
          width: 82px;
          height: 82px;
          margin-bottom: 11px;
          border-radius: 5px;
        }
      }
      .title{
        color: #333;
        font-size: 13px;
        line-height: 1;
        text-align: center;
        width: 82px;
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        margin-top: -4px;
        font-family:"PingFang SC", "Helvetica Neue", Helvetica, Arial, "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;

      }
      .rbGradient{
        position: absolute;
        top: 0;
        right: 0;
        color: #fff;
        width: 58px;
        height: 16px;
        border-radius: 3px 0 0;
        background: url('//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/rbGradient-049c62dfb5.png') no-repeat;
        background-size: 100%;
        display: inline-block;
        vertical-align: middle;
      }
      .topNum{
        font-size: 12px;
        position: absolute;
        top: 0;
        font-weight 500
        right: 2px;
        width: 75px;
        height: 16px;
        line-height: 16px;
        text-align: right;
      }
    }
  }
}